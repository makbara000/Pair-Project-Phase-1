    <form action="/">
      <input type="text" name="search" placeholder="Search by title"> &nbsp;
      <button type="submit">Search</button>
    </form>
    <table>
      <tr>
        <th>No</th>
        <th>Stock Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>code</th>
        <th>Type</th>
        <th>Lot Amount</th>
        <th>
          Action
        </th>
      </tr>
      <% data.forEach((e,i)=>{ %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td>
            <%= e.name %>
          </td>
          <td>
            <%= e.description %>
          </td>
          <td>
            <%= e.money %>
          </td>
          <td>
            <%= e.code %>
          </td>
          <td>
            <%= e.type %>
          </td>
          <td>
            <%= e.Lot %>
          </td>
          <td>
            <a href="/addToCart/<%= e.id %>"><button>add to cart</button></a>
          </td>
        </tr>
        <% }) %>
    </table>
  </div>

