<%- include("headers/NavSisa", {title:"SINTETIK Cart"}) %>
<div class="login-form">
  <h2 class="text-center">Cart</h2>
  <!-- UNPAID -->
  <table>
    <tr>
      <th>No</th>
      <th>Stock Code</th>
      <th>Stock Name</th>
      <th>Lot Quantity</th> 
      <th>Price</th>
      <th>Total Investment</th>
      <th>Action</th>
    </tr>
  <!-- read model users and stocks -->
  <!-- unpaid buy table -->
    <% unpaidStock.forEach((e,i) =>{ %>
      <tr>
        <td><%= i+1 %></td>
        <td>
          <%= e.Stock.code %>
        </td>
        <td>
          <%= e.Stock.name %>
        </td>
        <td>
          <%= e.totalInvestment %>
        </td>
        <td>
          <%= e.Stock.money %>
        </td>
        <td>
          <%= formatCurrency(e.totalInvestment * e.Stock.price) %>
        </td>
        <th>
          <a href="/cart/increase/<%= e.id %>"><button>+1 Lot</button></a>
          <a href="/cart/decrease/<%= e.id %>"><button>-1 Lot</button></a>
          <a href="/cart/buy/<%= e.id %>?tI=<%= e.totalInvestment %>&StockId=<%= e.Stock.id %>"><button>Pay</button></a>
        </th>
      </tr>
    <% }) %>
  </table><br><br>
  <!-- transaction history buy -->
  <h2 class="text-center">History Cart</h2>
  <table>
    <tr>
      <th>No</th>
      <th>Stock Code</th>
      <th>Stock Name</th>
      <th>Lot Quantity</th> 
      <th>Price</th>
      <th>Total Investment</th>
    </tr>
  <!-- read model users and stocks -->
  <!-- unpaid buy table -->
    <% paidStock.forEach((e,i) =>{ %>
      <tr>
        <td><%= i+1 %></td>
        <td>
          <%= e.Stock.code %>
        </td>
        <td>
          <%= e.Stock.name %>
        </td>
        <td>
          <%= e.totalInvestment %>
        </td>
        <td>
          <%= e.Stock.money %>
        </td>
        <td>
          <%= formatCurrency(e.totalInvestment * e.Stock.price) %>
        </td>
      </tr>
    <% }) %>
  </table>

</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
